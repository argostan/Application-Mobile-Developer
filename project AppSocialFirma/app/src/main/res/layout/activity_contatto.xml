<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContattoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/richiestaInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:text="Richiesta informazioni"
            android:textColor="@color/material_dynamic_neutral_variant30"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/richiestaDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:labelFor="@+id/richiestaInfo"
            android:text="Compila il segiente modiulo e sarai ricontattato \nentro 24 ore."
            android:textColor="#004471"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/labelNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:labelFor="@+id/fieldNome"
            android:text="Nome"
            android:textColor="#004471"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/fieldNome"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="40dp"
            android:inputType="text" />

        <TextView
            android:id="@+id/labelCognome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="40dp"
            android:labelFor="@+id/fieldCognome"
            android:text="Cognome"
            android:textColor="#004471"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/fieldCognome"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="40dp"
            android:inputType="text" />


        <TextView
            android:id="@+id/labelEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="40dp"
            android:labelFor="@+id/fieldEmail"
            android:text="Email"
            android:textColor="#004471"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/fieldEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="40dp"
            android:ems="10"
            android:hint="@string/example_mail"
            android:inputType="textEmailAddress"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/labelMessaggio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="40dp"
            android:labelFor="@+id/fieldMessaggio"
            android:text="Messaggio"
            android:textColor="#004471"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/fieldMessaggio"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:ems="10"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="40dp"
            android:inputType="text"
            android:textSize="12sp" />


        <Button
            android:id="@+id/buttonInvia"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="3dp"
            android:backgroundTint="#004471"
            android:text="INVIA"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
